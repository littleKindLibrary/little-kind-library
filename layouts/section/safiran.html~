               <span class="font-bold text-lg text-gray-700">{{ $section.Title }}</span>
            </div>
            <div class="flex items-center gap-3">
              {{ if gt $count 0 }}
              <span class="bg-green-100 text-green-700 text-xs font-medium px-2.5 py-1 rounded-full border border-green-200">
                 {{ $count }} سفیر فعال
              </span>
              {{ else }}
              <span class="bg-gray-100 text-gray-500 text-xs font-medium px-2.5 py-1 rounded-full">
                 بدون سفیر
              </span>
              {{ end }}
              <svg id="icon-sec-{{ $section.File.UniqueID }}" class="w-4 h-4 text-gray-400 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </div>
          </button>

          <div id="sec-{{ $section.File.UniqueID }}" class="hidden border-t border-gray-100 bg-gray-50/50">
            {{ if gt $count 0 }}
            <ul class="divide-y divide-gray-200/60">
              {{ range $section.RegularPages }}
              
              {{ $job := .Params.job | default .Params.params.job | default "تعریف نشده" }}
              {{ $city := .Params.city | default .Params.params.city | default $section.Title }}
              {{ $image := .Params.image | default .Params.params.image }}

              <li class="group p-4 hover:bg-white cursor-pointer transition-colors duration-200 flex items-center gap-4 px-8"
                  onclick="openAmbassador({
                    title: '{{ .Title }}',
                    image: '{{ $image }}',
                    job: '{{ $job }}',
                    city: '{{ $city }}', 
                    desc: '{{ .Content | plainify }}'
                  })">
                  
                  <div class="w-10 h-10 rounded-full bg-gray-200 overflow-hidden flex-shrink-0 border border-gray-300 group-hover:border-blue-400 transition-colors">
                    {{ if $image }}
                      <img src="{{ $image }}" class="w-full h-full object-cover">
                    {{ else }}
                      <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-100">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
                      </div>
                    {{ end }}
                  </div>
                  
                  <div class="flex-grow">
                    <div class="font-bold text-gray-800 group-hover:text-blue-700 transition-colors">{{ .Title }}</div>
                    <div class="text-xs text-gray-500 mt-0.5">{{ $job }}</div>
                  </div>
                  
                  <div class="text-gray-300 group-hover:text-blue-500">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                  </div>
              </li>
              {{ end }}
            </ul>
            {{ else }}
            <div class="p-6 text-center text-gray-400 text-sm italic bg-white">سفیری ثبت نشده است.</div>
