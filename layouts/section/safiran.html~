      {{ $sectionsList := slice }}
      {{ range .Sections }}
         {{ $count := len .RegularPages }}
         {{/* ساخت یک دیکشنری شامل آبجکت سکشن و تعداد */}}
         {{ $entry := dict "sec" . "cnt" $count }}
         {{ $sectionsList = $sectionsList | append $entry }}
      {{ end }}
      {{/* مرتب‌سازی نزولی (desc) بر اساس فیلد cnt */}}
      {{ $sortedSections := sort $sectionsList "cnt" "desc" }}

      {{ if eq (len $sortedSections) 0 }}
         <div class="p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50">
           <span class="font-medium">توجه:</span> پوشه استانی یافت نشد.
         </div>
      {{ end }}

      <div class="space-y-3">
        {{ range $sortedSections }}
        {{/* چون لیست ما کاستوم است، باید با .sec به اطلاعات اصلی دسترسی پیدا کنیم */}}
        {{ $section := .sec }}
        {{ $count := .cnt }}

        <div class="border border-gray-200 rounded-lg bg-white overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
          
          <button type="button" 
                  onclick="toggleSection('sec-{{ $section.File.UniqueID }}')"
                  class="w-full flex justify-between items-center px-6 py-4 bg-white hover:bg-gray-50 transition focus:outline-none select-none">
